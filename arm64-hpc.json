{
    "_author": "Hoa Nguyen <hoanguyen@ucdavis.edu>",
    "_license": "Copyright (c) 2023 The Regents of the University of California. SPDX-License-Identifier: BSD 3-Clause",
    "builders":
    [
        {
            "type": "null",
            "ssh_host": "localhost",
            "ssh_port": "5555",
            "ssh_username": "{{ user `ssh_username` }}",
            "ssh_agent_auth": true,
            "ssh_ciphers":  ["aes128-gcm@openssh.com", "chacha20-poly1305@openssh.com", "aes128-ctr", "aes192-ctr", "aes256-ctr"],
            "ssh_certificate_file": "~/.ssh/id_rsa",
            "ssh_clear_authorized_keys": true
        }
    ],
    "provisioners":
    [
        {
            "type": "file",
            "source": "arm64-hpc/gem5-init.sh",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "file",
            "source": "shared/serial-getty@.service",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "file",
            "source": "arm64-hpc/benchmark-configs",
            "destination": "/home/ubuntu/benchmark-configs/"
        },
        {
            "type": "file",
            "source": "arm64-hpc/patches/gem5/0001-m5op-arm-kvm-addr-fix.patch",
            "destination": "/home/ubuntu/"
        },
        {
            "type": "shell",
            "execute_command": "{{.Vars}} bash '{{.Path}}'",
            "scripts":
            [
                "arm64-hpc/1.packages-install.sh",
                "arm64-hpc/2.m5-install.sh",
                "arm64-hpc/3.stream-install.sh",
                "arm64-hpc/4.gups-install.sh",
                "arm64-hpc/5.npb-install.sh",
                "arm64-hpc/6.spatter-install.sh",
                "arm64-hpc/7.permutating-gather-install.sh",
                "arm64-hpc/8.permutating-scatter-install.sh",
                "arm64-hpc/9.memory-latency-test-install.sh",
                "arm64-hpc/10.gapbs-install.sh"
            ]
        }
    ],
    "variables":
    {
        "ssh_username": "ubuntu"
    }
}
